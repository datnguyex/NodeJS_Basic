<h1>Khóa học đã xóa</h1>

<a href='/' class='btn btn-primary'>trở lại</a>
<div class='row'>
    {{#each courses}}
        <div class='col-md-4'>
            <div class='card' style='width: 18rem;'>
                <a href='/courses/{{this.slug}}'>
                    <img src='{{this.image}}' class='card-img-top' alt='{{this.name}}' />
                </a>
                <div class='card-body'>
                    <a href='courses/{{this.slug}}'>
                        <h5 class='card-title'>{{this.name}}</h5>
                    </a>
                    <p class='card-text'>{{this.description}}</p>
                    <a href='/courses/{{this._id}}/restore' class='btn btn-primary'>Khôi phục</a>
                    <a href='/courses/{{this._id}}/deleteForce' class='btn btn-primary'>xóa vĩnh viễn</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>