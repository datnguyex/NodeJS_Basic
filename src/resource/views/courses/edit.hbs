<form method='post' action='/courses/{{course._id}}?_method=PUT'>
    <div class='mb-3'>
        <label for='name' class='form-label'>Name:</label>
        <input type='text' name='name' class='form-control' id='name' value='{{course.name}}' />
    </div>
    <div class='mb-3'>
        <label for='image' class='form-label'>Image:</label>
        <input type='file' name='image' class='form-control' id='image' />
    </div>
    <div class='mb-3'>
        <label for='description' class='form-label'>Example textarea</label>
        <textarea name='description' class='form-control' id='description' rows='3'>{{course.description}}</textarea>
    </div>
    <div class='col-auto'>
        <button type='submit' class='btn btn-primary mb-3'>Confirm identity</button>
    </div>
</form>